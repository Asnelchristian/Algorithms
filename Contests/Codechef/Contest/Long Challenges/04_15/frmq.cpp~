#include <stdio.h>
#include <algorithm>
#include <iostream>
#include <stdlib.h>
using namespace std;
long long n,*a,i=0,m,x1,y1,lower,upper,sum=0;
int main(){
	
	std::ios_base::sync_with_stdio(false);
	cin>>n;
	a=(long long *)malloc(n*sizeof(long long));
	
	while(i<n)
		{
			cin>>a[i];
			i++;
		}
	cin>>m;
	cin>>x1;
	cin>>y1;
	
	while(m--){
	
		lower=x1>y1?y1:x1;
		upper=x1<y1?y1:x1;
		sum+=(*max_element(a+lower,a+upper+1));
		x1=(x1+7)%(n-1);
		y1=(y1+11)%n;
	
	
	}
	
	cout<<sum;
	return 0;
}
 
